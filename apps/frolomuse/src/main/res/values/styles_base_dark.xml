<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Base dark theme-->
    <style name="Base.AppTheme.Dark" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="actionBarSize">@dimen/default_bar_size</item>
        <item name="android:actionBarSize">@dimen/default_bar_size</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_close_outline_24</item>
        <item name="actionOverflowButtonStyle">@style/Base.AppTheme.ActionButton.Overflow.Dark</item>

        <!--Material colors-->
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="tabStyle">@style/Base.AppTheme.TabLayout</item>
        <item name="android:textViewStyle">@style/Base.AppTheme.TextView</item>
        <item name="recyclerViewStyle">@style/Base.AppTheme.RecyclerView</item>
        <item name="materialButtonStyle">@style/Base.AppTheme.Button.TextButton</item>
        <item name="spinnerStyle">@style/Base.AppTheme.Spinner</item>
        <item name="sliderStyle">@style/Base.AppTheme.Slider.Dark</item>
        <item name="cardViewStyle">@style/Base.AppTheme.CardView</item>
        <item name="materialCardViewStyle">@style/Base.AppTheme.CardView</item>
        <item name="ttlm_defaultStyle">@style/Tooltip.Default</item>

        <item name="actionBarTheme">@style/Base.AppTheme.ThemeOverlay.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Tinted</item>
        <item name="actionOverflowMenuStyle">@style/Base.AppTheme.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Base.AppTheme.PopupMenu</item>

        <item name="equalizerViewStyle">@style/Base.AppTheme.EqualizerView.Dark</item>
        <item name="waveformSeekBarStyle">@style/Base.AppTheme.WaveformSeekBar.Dark</item>

        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
        <item name="android:textColorHint">@color/md_white_1000</item>

        <item name="errorTextColor">@color/error</item>

        <!--Text appearances-->
        <item name="textAppearanceListItem">@style/Base.AppTheme.TextAppearance.ListItem</item>
        <item name="textAppearanceListItemSmall">@style/Base.AppTheme.TextAppearance.ListItem</item>
        <item name="textAppearanceListItemSecondary">@style/Base.AppTheme.TextAppearance.ListItemSecondary</item>

        <!--Custom attrs-->
        <item name="iconTintMuted">#FFFFFF</item>
        <item name="placeholderImageTint">#FFFFFF</item>
        <item name="dividerTint">#ABABAB</item>
        <item name="colorPremiumProductAccent">?colorAccent</item>
        <item name="thumbnailForegroundTint">@color/thumbnail_foreground_tint</item>
        <item name="thumbnailBackgroundTint">@color/thumbnail_background_tint</item>
        <item name="snowflakeTint">@color/white</item>
        <item name="iBarStyle">@style/Base.AppTheme.Dark.IBar</item>
        <item name="fastScrollerStyle">@style/Base.AppTheme.FastScroller</item>
        <item name="colorPlayerSurface">?colorSurface</item>
        <item name="colorOnPlayerSurface">?colorPlayerElement3</item>
        <item name="colorPlayerText">#FDFDFD</item>
        <item name="colorPlayerElement1">#FDFDFD</item>
        <item name="colorPlayerElement2">#EDEDED</item>
        <item name="colorPlayerElement3">#E8E8E8</item>
    </style>

    <style name="Base.AppTheme.Dark.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/Base.AppTheme.WindowAnimation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>

        <item name="textAppearanceButton">@style/Base.AppTheme.TextAppearance.Button</item>

        <item name="materialButtonStyle">@style/Base.AppTheme.Button.TextButton</item>
        <item name="searchViewStyle">@style/Base.AppTheme.SearchView</item>
        <item name="autoCompleteTextViewStyle">@style/Base.AppTheme.AutoCompleteTextView</item>
        <item name="sliderStyle">@style/Base.AppTheme.Slider.Dark</item>

        <item name="errorTextColor">@color/error</item>

        <item name="colorPremiumProductAccent">?colorAccent</item>
    </style>

    <style name="Base.AppTheme.WaveformSeekBar.Dark" parent="Base.AppTheme.WaveformSeekBar">
        <item name="waveBackgroundColor">#3DC1C1C1</item>
    </style>

    <style name="Base.AppTheme.ActionButton.Overflow.Dark" parent="RtlUnderlay.Widget.AppCompat.ActionButton.Overflow">
        <item name="srcCompat">@drawable/ic_menu_overflow</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Base.AppTheme.ThemeOverlay.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/Base.AppTheme.ActionButton.Overflow.Dark</item>
    </style>

    <style name="Base.AppTheme.Dark.IBar" parent="android:style/Widget">
        <item name="activeColor">#D3FFFFFF</item>
        <item name="inactiveColor">#00FFFFFF</item>
    </style>

    <style name="Base.AppTheme.Switch.Dark" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">#5E5E5E</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="Base.AppTheme.Slider.Dark" parent="Widget.MaterialComponents.Slider">
        <item name="thumbRadius">6dp</item>
        <item name="haloColor">@color/color_secondary_alpha20</item>
        <item name="haloRadius">16dp</item>
        <item name="trackColorInactive">#66959595</item>
        <item name="trackColorActive">?colorSecondary</item>
        <item name="thumbColor">?colorSecondary</item>
        <item name="trackHeight">2dp</item>
        <item name="labelBehavior">gone</item>
    </style>

    <style name="Base.AppTheme.EqualizerView.Dark" parent="EqualizerView.Default">
        <item name="drawVisuals">true</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>