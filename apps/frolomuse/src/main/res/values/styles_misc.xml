<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.AppTheme.Launch" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
        <item name="colorPrimaryDark">@color/splash_background</item>
    </style>

    <!--Player-->
    <style name="PlayButton.JustIcon.White" parent="PlayButton.Default">
        <item name="pauseBackground">@color/transparent</item>
        <item name="resumeBackground">@color/transparent</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="PlayButton.Main" parent="PlayButton.Default">
        <item name="pauseBackground">@color/transparent</item>
        <item name="resumeBackground">@color/transparent</item>
        <item name="iconTint">?colorPlayerElement1</item>
        <item name="android:background">@drawable/bg_main_play_button</item>
    </style>

    <!--Lyrics-->
    <style name="TextAppearance.Lyrics.Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <style name="TextAppearance.Lyrics.TextLine" parent="TextAppearance.AppCompat.Body1">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <!--Tooltips-->
    <style name="Tooltip.Default" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">?colorSecondary</item>
        <item name="ttlm_cornerRadius">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Tooltip</item>
    </style>

    <style name="TextAppearance.Tooltip" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?colorOnSecondary</item>
    </style>
</resources>