<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Base light theme-->
    <style name="Base.AppTheme.Light" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="actionBarSize">@dimen/default_bar_size</item>
        <item name="android:actionBarSize">@dimen/default_bar_size</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_close_outline_24</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/Base.AppTheme.ActionButton.Overflow.Light</item>

        <item name="dialogTheme">@style/Base.AppTheme.Dialog.Light</item>
        <item name="android:dialogTheme">@style/Base.AppTheme.Dialog.Light</item>
        <item name="materialAlertDialogTheme">@style/Base.AppTheme.MaterialAlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/Base.AppTheme.BottomSheet.Dialog.Light</item>
        <item name="spinnerStyle">@style/Base.AppTheme.Spinner</item>
        <item name="toolbarStyle">@style/Base.AppTheme.Light.Toolbar</item>
        <item name="tabStyle">@style/Base.AppTheme.TabLayout</item>
        <item name="android:textViewStyle">@style/Base.AppTheme.TextView</item>
        <item name="recyclerViewStyle">@style/Base.AppTheme.RecyclerView</item>
        <item name="materialButtonStyle">@style/Base.AppTheme.Button.TextButton</item>
        <item name="searchViewStyle">@style/Base.AppTheme.SearchView</item>
        <item name="fastScrollerStyle">@style/Base.AppTheme.FastScroller</item>
        <item name="sliderStyle">@style/Base.AppTheme.Slider.Light</item>
        <item name="cardViewStyle">@style/Base.AppTheme.CardView</item>
        <item name="materialCardViewStyle">@style/Base.AppTheme.CardView</item>
        <item name="ttlm_defaultStyle">@style/Tooltip.Default</item>

        <item name="actionBarTheme">@style/Base.AppTheme.ThemeOverlay.Light.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Tinted</item>
        <item name="actionOverflowMenuStyle">@style/Base.AppTheme.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Base.AppTheme.PopupMenu</item>
        <item name="actionBarStyle">@style/Widget.Material3.Light.ActionBar.Solid</item>
        <item name="actionModeStyle">@style/Base.AppTheme.Light.ActionMode</item>

        <item name="equalizerViewStyle">@style/Base.AppTheme.EqualizerView.Light</item>
        <item name="waveformSeekBarStyle">@style/Base.AppTheme.WaveformSeekBar.Light</item>

        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>

        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">#ADADAD</item>

        <item name="errorTextColor">@color/error</item>

        <!--Text appearances-->
        <item name="textAppearanceListItem">@style/Base.AppTheme.TextAppearance.ListItem</item>
        <item name="textAppearanceListItemSmall">@style/Base.AppTheme.TextAppearance.ListItemSmall</item>
        <item name="textAppearanceListItemSecondary">@style/Base.AppTheme.TextAppearance.ListItemSecondary</item>

        <!--Custom attrs-->
        <item name="iconTintMuted">#ABABAB</item>
        <item name="placeholderImageTint">#C3C3C3</item>
        <item name="dividerTint">#E3E3E3</item>
        <item name="colorPremiumProductAccent">?colorAccent</item>
        <item name="thumbnailForegroundTint">@color/thumbnail_foreground_tint</item>
        <item name="thumbnailBackgroundTint">@color/thumbnail_background_tint</item>
        <item name="snowflakeTint">#ABDAE6</item>
        <item name="colorPlayerSurface">?colorSurface</item>
        <item name="colorOnPlayerSurface">?colorPlayerElement3</item>
        <item name="colorPlayerText">#353535</item>
        <item name="colorPlayerElement1">#A8A8A8</item>
        <item name="colorPlayerElement2">#B5B5B5</item>
        <item name="colorPlayerElement3">#B8B8B8</item>
    </style>

    <style name="Base.AppTheme.Dialog.Light" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/Base.AppTheme.WindowAnimation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>

        <item name="textAppearanceButton">@style/Base.AppTheme.TextAppearance.Button</item>

        <item name="materialButtonStyle">@style/Base.AppTheme.Button.TextButton</item>
        <item name="switchStyle">@style/Switch.Light</item>
        <item name="searchViewStyle">@style/Base.AppTheme.SearchView</item>
        <item name="autoCompleteTextViewStyle">@style/Base.AppTheme.AutoCompleteTextView</item>
        <item name="sliderStyle">@style/Base.AppTheme.Slider.Light</item>

        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/md_grey_400</item>

        <item name="errorTextColor">@color/error</item>

        <item name="colorPremiumProductAccent">?colorAccent</item>
    </style>

    <style name="Base.AppTheme.WaveformSeekBar.Light" parent="Base.AppTheme.WaveformSeekBar">
        <item name="waveBackgroundColor">#66AAAAAA</item>
    </style>

    <style name="Base.AppTheme.Light.ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
    </style>

    <style name="Base.AppTheme.Light.ActionMode" parent="Widget.Material3.ActionMode">
        <item name="actionModeBackground">?colorPrimaryVariant</item>
        <item name="titleTextStyle">@style/Base.AppTheme.TextAppearance.ActionMode.Title</item>
    </style>

    <style name="Base.AppTheme.TextAppearance.ActionMode.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Base.AppTheme.ActionButton.Overflow.Light" parent="RtlUnderlay.Widget.AppCompat.ActionButton.Overflow">
        <item name="srcCompat">@drawable/ic_menu_overflow</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Base.AppTheme.ThemeOverlay.Light.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/Base.AppTheme.ActionButton.Overflow.Light</item>
    </style>

    <style name="Base.AppTheme.Light.Toolbar" parent="Base.AppTheme.Toolbar">
        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Base.AppTheme.BottomSheet.Dialog.Light" parent="Base.AppTheme.BottomSheetDialog">
        <item name="colorControlHighlight">@color/light_gray</item>
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheet.Light</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="AppTheme.BottomSheet.Light" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_dialog_light</item>
    </style>

    <style name="Switch.Light" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">#DFDFDF</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="Base.AppTheme.Slider.Light" parent="Widget.MaterialComponents.Slider">
        <item name="thumbRadius">6dp</item>
        <item name="haloColor">@color/color_secondary_alpha20</item>
        <item name="haloRadius">16dp</item>
        <item name="trackColorInactive">#E4E4E4</item>
        <item name="trackColorActive">?colorSecondary</item>
        <item name="thumbColor">?colorSecondary</item>
        <item name="trackHeight">2dp</item>
        <item name="labelStyle">@style/Base.AppTheme.Tooltip.Light</item>
        <item name="labelBehavior">gone</item>
    </style>

    <style name="Base.AppTheme.Tooltip.Light" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.AppTheme.EqualizerView.Light" parent="">
        <item name="drawVisuals">true</item>
        <item name="gridColor">#DFDFDF</item>
        <item name="gridLineThickness">1dp</item>
        <item name="levelColor">?colorAccent</item>
    </style>

</resources>