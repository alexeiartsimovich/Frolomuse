<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Misc-->
    <color name="window_background_color">#EAEAEA</color>
    <color name="system_bar_color">#CCEAEAEA</color>
    <color name="divider_color">#DDDDDD</color>

    <!--Material-->
    <color name="color_primary">#364CBD</color>
    <color name="color_on_primary">#FFFFFF</color>
    <color name="color_secondary">#4780D6</color>
    <color name="color_on_secondary">#FFFFFF</color>
    <color name="color_surface">#FFFFFF</color>
    <color name="color_on_surface">#686868</color>
    <color name="error_text_color">@color/md_red_500</color>

    <!--Text colors-->
    <color name="text_color_primary">#3A3A3A</color>
    <color name="text_color_secondary">#676767</color>

    <style name="Theme.Frolo.AudioFx.Splash" parent="Theme.Frolo.AudioFx">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.Frolo.AudioFx" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/system_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/system_bar_color</item>
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="actionBarSize">@dimen/default_bar_size</item>
        <item name="android:actionBarSize">@dimen/default_bar_size</item>

        <item name="dialogTheme">@style/Theme.Frolo.AudioFx.Dialog</item>
        <item name="android:dialogTheme">@style/Theme.Frolo.AudioFx.Dialog</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Frolo.AudioFx.BottomSheetDialog</item>

        <item name="android:textViewStyle">@style/Theme.Frolo.AudioFx.TextView</item>

        <item name="equalizerViewStyle">@style/Theme.Frolo.AudioFx.EqualizerView</item>
        <item name="effectBoosterViewStyle">@style/Theme.Frolo.AudioFx.EffectBoosterView</item>

        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:textColorHint">@color/text_color_secondary</item>

        <!--Material colors-->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="errorTextColor">@color/error_text_color</item>

        <item name="dividerColor">@color/divider_color</item>
    </style>

    <style name="Theme.Frolo.AudioFx.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/Theme.Frolo.AudioFx.WindowAnimation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>

        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:textColorHint">@color/text_color_secondary</item>

        <!--Material colors-->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="errorTextColor">@color/error_text_color</item>

        <item name="dividerColor">@color/divider_color</item>

        <item name="textInputStyle">@style/Theme.Frolo.AudioFx.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Theme.Frolo.AudioFx.MaterialButton</item>
    </style>

    <style name="Theme.Frolo.AudioFx.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1.2dp</item>
        <item name="boxStrokeWidthFocused">1.6dp</item>
        <item name="materialThemeOverlay">@style/Theme.Frolo.AudioFx.TextInputEditText</item>
    </style>

    <style name="Theme.Frolo.AudioFx.MaterialButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Theme.Frolo.AudioFx.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/color_primary</item>
    </style>

    <style name="Theme.Frolo.AudioFx.WindowAnimation.Dialog" parent="">
        <item name="android:windowEnterAnimation">@anim/enter_bounce</item>
    </style>

    <style name="Theme.Frolo.AudioFx.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Frolo.AudioFx.BottomSheet</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="paddingBottomSystemWindowInsets">true</item>
        <item name="paddingLeftSystemWindowInsets">true</item>
        <item name="paddingRightSystemWindowInsets">true</item>
        <item name="android:windowAnimationStyle">@style/Theme.Frolo.AudioFx.Animation.BottomSheetDialog</item>
    </style>

    <style name="Theme.Frolo.AudioFx.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <style name="Theme.Frolo.AudioFx.Animation.BottomSheetDialog" parent="@style/Animation.MaterialComponents.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>

    <style name="Theme.Frolomuse.AudioFx.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/md_white_1000</item>
    </style>

    <!--TextView-->
    <style name="Theme.Frolo.AudioFx.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@null</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Frolo.AudioFx.EqualizerView" parent="EqualizerView.Default">
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.Frolo.AudioFx.EffectBoosterView" parent="EffectBoosterView.Default">
        <item name="strokeWidth">2dp</item>
        <item name="strokeInactiveColor">#E4E4E4</item>
        <item name="strokeActiveColor">?colorSecondary</item>
    </style>
</resources>