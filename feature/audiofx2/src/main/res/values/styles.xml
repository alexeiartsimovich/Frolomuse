<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="strokeWidth" format="dimension"/>
    <attr name="strokeInactiveColor" format="color"/>
    <attr name="strokeActiveColor" format="color"/>
    <attr name="thumbRadius" format="dimension"/>
    <attr name="trackHeight" format="dimension"/>
    <attr name="trackInactiveColor" format="color"/>
    <attr name="trackActiveColor" format="color"/>
    <attr name="thumbTint" format="color"/>

    <!--EffectBoosterView-->
    <attr name="effectBoosterViewStyle" format="reference"/>
    <declare-styleable name="EffectBoosterView">
        <attr name="strokeWidth"/>
        <attr name="strokeInactiveColor"/>
        <attr name="strokeActiveColor"/>
        <attr name="thumbRadius"/>
        <attr name="thumbTint"/>
    </declare-styleable>

    <style name="EffectBoosterView.Default" parent="">
        <item name="strokeWidth">2dp</item>
        <item name="strokeInactiveColor">@color/simple_inactive_color</item>
        <item name="strokeActiveColor">@color/simple_active_color</item>
        <item name="thumbRadius">8dp</item>
        <item name="thumbTint">@color/simple_thumb_tint</item>
    </style>

    <!--ReverbPanelView-->
    <attr name="reverbPanelViewStyle" format="reference"/>
    <declare-styleable name="ReverbPanelView">
        <attr name="trackHeight"/>
        <attr name="trackInactiveColor"/>
        <attr name="trackActiveColor"/>
        <attr name="thumbRadius"/>
        <attr name="thumbTint"/>
    </declare-styleable>

    <style name="ReverbPanelView.Default" parent="">
        <item name="trackHeight">2dp</item>
        <item name="trackInactiveColor">@color/simple_inactive_color</item>
        <item name="trackActiveColor">@color/simple_active_color</item>
        <item name="thumbRadius">8dp</item>
        <item name="thumbTint">@color/simple_thumb_tint</item>
    </style>

    <!--View styles-->
    <style name="App.MaterialCard.EffectPanel" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">1.8dp</item>
        <item name="cardMaxElevation">2.8dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="App.Slider.EffectPanel" parent="Widget.Material3.Slider">
        <item name="haloRadius">16dp</item>
        <item name="haloColor">#339F9F9F</item>
        <item name="thumbElevation">1.2dp</item>
        <item name="thumbRadius">6dp</item>
        <item name="thumbColor">?colorSecondary</item>
        <item name="tickColorActive">@color/simple_active_color</item>
        <item name="tickColorInactive">@color/simple_inactive_color</item>
        <item name="trackHeight">2dp</item>
        <item name="trackColorActive">@color/simple_active_color</item>
        <item name="trackColorInactive">@color/simple_inactive_color</item>
        <item name="labelBehavior">floating</item>
        <item name="labelStyle">@style/App.Slider.EffectPanel.Tooltip</item>
    </style>
    
    <style name="App.Slider.EffectPanel.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">#CC656565</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAppearance">@style/App.TextAppearance.EffectPanel.Tooltip</item>
    </style>

    <style name="App.TextAppearance.EffectPanel.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="App.Spinner.EffectPanel" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:popupBackground">@drawable/bg_spinner_popup</item>
    </style>
</resources>